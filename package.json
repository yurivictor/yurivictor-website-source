{
  "name": "yurivictor.github.io",
  "version": "1.0.0",
  "description": "My personal homepage",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch serve",
    "serve": "live-server src",
    "watch:scss": "sass --watch src/scss:src/css",
    "watch": "npm-run-all --parallel watch:*",
    "build:scss": "sass src/scss:src/css",
    "build:autoprefixer": "postcss src/css/*.css --use autoprefixer -d src/css",
    "build:css-minify": "postcss src/css/*.css --use cssnano -d dist/css",
    "build:copy-html": "cp src/index.html dist/",
    "build:copy-js": "cp src/js/*.js dist/js/",
    "build": "npm-run-all build:scss build:autoprefixer build:css-minify build:copy-html build:copy-js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.5",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.8"
  }
}
